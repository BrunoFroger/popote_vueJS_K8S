# Use the lightweight Nginx image from the previous stage for the nginx container
#FROM nginx:stable-alpine
FROM nginx:stable-perl


RUN echo "==========================="; \
    echo "|                         |"; \
    echo "|       NGINX             |"; \
    echo "|                         |"; \
    echo "==========================="


RUN apt-get update
RUN apt-get install certbot python3-certbot-nginx -y

# Copy the nginx configuration file
COPY ./nginx/nginx.conf /etc/nginx/conf.d/default.conf

COPY ./nginx/cert /etc/letsencrypt/live/popote.zapto.org
COPY ./nginx/cert/options-ssl-nginx.conf /etc/letsencrypt/options-ssl-nginx.conf 
COPY ./nginx/cert/ssl-dhparams.pem /etc/letsencrypt/options-ssl-nginx.conf 


# Expose the port 80
EXPOSE 80
# Start Nginx to serve the application
CMD ["nginx", "-g", "daemon off;"]